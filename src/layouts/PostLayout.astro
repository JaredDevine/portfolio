---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"blog">["data"];
const { title = "Jared Devine", description = "Design Technologist" } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <div class="max-w-7xl m-auto px-6">
      <Header />
      <main>
        <article>
          <div class="space-y-6">
            <div
              class={`border-b border-zinc-200 mb-12 ${description ? "pb-12" : ""}`}
            >
              <h2
                class="text-4xl tracking-tight text-balance font-display text-black mb-9"
              >
                {title}
              </h2>
              {description && <em class="text-zinc-500">{description}</em>}
            </div>
            <slot />
          </div>
        </article>
      </main>
      <Footer />
    </div>
  </body>
</html>
